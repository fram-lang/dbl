data StateSig E X = State of
  { get : Unit ->[E] X
  , put : X ->[E] Unit
  }

method get {State, self = State { get } : StateSig State _ } = get
method put {State, self = State { put } : StateSig State _ } = put

parameter State
parameter ~st : StateSig State _

let update f =
  ~st.put (f (~st.get ()))

let updateTwice f =
  let _ = update f in
  update f
