data rec List A = [] | (::) of A, List A

data UnitFmt = UnitFmt of { ?unit : String }

method toString {?prec : Int, ?fmt : UnitFmt} () =
  match fmt with
  | Some (UnitFmt {unit=Some name}) => name
  | _ => "()"
  end

let _ = "unformatted \{ () }"
let _ = "formatted   \{ () | UnitFmt {unit="UNIT"}}"
